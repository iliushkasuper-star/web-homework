#include <iostream>
using namespace std;

class Drib
{
    int n;
    int d;
    public:
    void Init(){
        cout << "Enter numerator: ";
        cin >> n;
        cout << "ENter detominator: ";
        cin >> d;
        if(d <= 0){
            cout << "Detominator cannot be under the zero:( Detominator automaticlly set up to one.";
            d = 1;
        }


    }
    void Print(){
        cout << n << "/" << d << endl;
    }

    void SetN(int newN)
    {
        n = newN;
    }
    int GetN()
    {
        return n;
    }

    void SetD(int newD){
        if(newD <= 0){
            cout << "erorrrrrr";
            newD = 1;
        }
        d = newD;

    }
    int GetD(){
        return d;
    }
};

int main()
{
    Drib j;
    int w;
    int e;

    j.Init();
    cout << "Your drib is: ";
    j.Print();

    cout << "Enter your new numerator: ";
    cin >> w;
    j.SetN(w);
    cout << "Enter your new denominator: ";
    cin >> e;
    j.SetD(e);
    cout << "Your new fraction is: ";
    void Print();

    cout << "\n";


    int n = j.GetN();
    cout << n << endl;

    int d = j.GetD();
    cout << d << endl;

    
}
